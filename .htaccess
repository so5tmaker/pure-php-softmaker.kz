#*******************************************************************************
#**************************** ПЕРЕАДРЕСАЦИЯ БЕЗ GET ПАРАМЕТРОВ *****************
#*******************************************************************************

# softmaker.kz/articles/ или softmaker.kz/files/
RewriteCond %{QUERY_STRING} . [NC]
RewriteRule (.*)/$ $1/? [R=301,L]

# softmaker.kz/articles/php/ или softmaker.kz/files/1s/
RewriteCond %{QUERY_STRING} . [NC]
RewriteRule (.*)/([A-Za-z0-9-]+)/$ $1/$2/? [R=301,L]

# http://mysite/articles/php/page.html или softmaker.kz/files/1s/page.html
RewriteCond %{QUERY_STRING} . [NC]
RewriteRule (.*)/([A-Za-z0-9-]+)\.html$ $1/$2\.html? [R=301,L]
